<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="/js/createForm.js"></script>
    <title>Product Details</title>
    <style>
      .error-message {
        display: none;
        color: red;
        font-size: 0.9rem;
      }
      .container {
        max-width: 600px;
        margin: 20px auto;
        font-family: Arial, sans-serif;
      }
      .card {
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        padding: 20px;
        background-color: #f9f9f9;
      }
      .btn {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      .btn:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <div class="card shadow">
        <div class="card-header">
          <h2 class="text-center">Product Details</h2>
        </div>
        <div class="card-body">
          <!-- Updated form attributes -->
          <form id="productForm" method="POST" action="/admin/products">
            <!-- Product ID -->
            <div class="form-group">
              <label for="id">Product ID</label>
              <input
                type="text"
                class="form-control query"
                id="id"
                name="id"
                placeholder="Enter Product ID"
              />
              <div class="error-message">Product ID is required</div>
            </div>

            <!-- Product Name -->
            <div class="form-group">
              <label for="name">Product Name</label>
              <input
                type="text"
                class="form-control query"
                id="name"
                name="name"
                placeholder="Enter Product Name"
              />
              <div class="error-message">Product Name is required</div>
            </div>

            <!-- Product Type -->
            <div class="form-group">
              <label for="type">Product Type</label>
              <select class="form-control query" id="type" name="type">
                <option value="">Select Type</option>
                <option value="tshirt">T-Shirt</option>
                <option value="jeans">Jeans</option>
                <option value="jacket">Jacket</option>
                <option value="dress">Dress</option>
                <option value="skirt">Skirt</option>
                <option value="sweater">Sweater</option>
                <option value="shoes">Shoes</option>
              </select>
              <div class="error-message">Product Type is required</div>
            </div>

            <!-- Product Price -->
            <div class="form-group">
              <label for="price">Price (Â£)</label>
              <input
                type="number"
                class="form-control query"
                id="price"
                name="price"
                placeholder="Enter Price"
              />
              <div class="error-message">Price is required</div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary btn-block">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
