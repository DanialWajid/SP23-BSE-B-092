<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Category Page</title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
        color: #333;
        font-family: Arial, sans-serif;
      }

      .container {
        max-width: 1200px;
        margin: 50px auto;
      }

      /* Heading Section */
      .position-relative.text-center.my-5 {
        margin-bottom: 50px;
      }

      .position-relative.text-white.text-center.w-100 {
        background-color: black;
        padding: 20px;
        z-index: 1;
      }

      .position-relative.text-white.text-center.w-100 p {
        font-size: 1.25rem;
        font-weight: 300;
        margin-bottom: 0.5rem;
      }

      .position-relative.text-white.text-center.w-100 h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
      }

      .btn-primary {
        background-color: #007bff;
        border: none;
      }

      /* Cards Section */
      #card-container {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap; /* Allow wrapping */
        padding-bottom: 20px; /* Add space for pagination */
        padding-left: 15px;
        padding-right: 15px;
      }

      .card {
        flex: 0 0 21%; /* Set to show 4 cards per row (100% / 4 = 25%) */
        width: 21%; /* Make sure cards take up equal width */
        min-width: 280px; /* Ensure each card has a minimum width */
        max-width: 320px; /* Maximum width for the card */
      }

      .card-img-top {
        max-height: 350px;
        object-fit: cover;
      }

      .card-body p {
        margin-bottom: 10px;
        font-size: 1rem;
      }

      /* Pagination Section */
      .pagination {
        justify-content: center;
      }

      .pagination .page-link {
        color: #007bff;
      }

      .pagination .page-link:hover {
        background-color: #007bff;
        color: white;
      }

      .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Heading Section -->
      <div class="position-relative text-center my-5">
        <div
          class="position-relative text-white text-center w-100"
          style="background-color: black; padding: 20px; z-index: 1"
        >
          <p class="text-uppercase fw-light mb-2"><%= heading.subtitle %></p>
          <h1 class="display-4 fw-bold mb-3"><%= heading.title %></h1>
        </div>
      </div>

      <!-- Cards Section -->
      <div id="card-container" class="row justify-content-center">
        <% dynamicCards.forEach(function(card, index) { %>
        <div class="col-12 col-md-4 mb-4" data-index="<%= index %>">
          <div class="card border-0 shadow text-center">
            <a href="<%= card.link %>" class="text-decoration-none text-dark">
              <img
                src="<%= card.image %>"
                alt="<%= card.alt %>"
                class="card-img-top img-fluid"
              />
              <div class="card-body">
                <p class="fw-bold mb-2"><%= card.text %></p>
                <p class="text-muted mb-1">Price: <%= card.price %></p>
                <p class="text-muted">Colors: <%= card.colors %></p>
              </div>
            </a>
          </div>
        </div>
        <% }); %>
      </div>

      <!-- Pagination Section -->
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>"
              >Previous</a
            >
          </li>
          <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
          <% } %> <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
          </li>
          <% } %>
        </ul>
      </nav>
    </div>

    <!-- Add Font Awesome for Arrows -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  </body>
</html>
